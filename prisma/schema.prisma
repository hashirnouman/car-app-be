datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Image {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  url    String
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  password String
  images   Image[]
}

model Car {
    id       String  @id @default(auto()) @map("_id") @db.ObjectId
    name String
    price Float
}